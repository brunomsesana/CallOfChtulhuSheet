<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <title>Ficha Call of Cthulhu</title>
</head>
<body>
    <div class="container shadow centralized pad20 window">
        <h1>Call of Cthulhu Automatic Sheet</h1>
        <p>Disclaimer: this is a fanmade website to make the sheet easier to use</p>
    </div>
    <div class="empty">

    </div>
    <div class="container shadow centralized pad20 window login">
        <h3 style="margin-bottom: 10px;">Register</h3>
        <a href="/login">Login</a>
        <form action="/auth/register" method="post">
            <input type="name" name="name" id="name" class="form-control" style="margin-bottom: 10px; margin-top: 10px;" placeholder="Name">
            <input type="email" name="email" id="email" class="form-control" style="margin-bottom: 10px; margin-top: 10px;" placeholder="Email">
            <input type="password" name="password" id="password" class="form-control" style="margin-bottom: 10px;" placeholder="Password">
            <input type="password" name="passwordc" id="passwordc" class="form-control" style="margin-bottom: 10px;" placeholder="Confirm Password">
            <button class="btn btn-primary">Register</button>
        </form>
        {{#if message}}
        <h4 class="alert alert-danger">{{message}}</h4>
        {{/if}}
        {{#if message2}}
        <h4 class="alert alert-success">{{message2}}</h4>
        {{/if}}
    </div>
</body>
</html>